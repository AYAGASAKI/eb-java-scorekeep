Parameters:
  EmailAddress:
    Type: String
    Default: UPDATEME

option_settings:
  aws:elasticbeanstalk:application:environment:
    AWS_REGION: '`{"Ref" : "AWS::Region"}`'
    NOTIFICATION_TOPIC: '`{"Ref" : "NotificationTopic"}`'
    NOTIFICATION_EMAIL: '`{"Ref" : "EmailAddress"}`'
    LBENDPOINT: '`{"Fn::GetAtt":["AWSEBLoadBalancer","DNSName"]}`'
    WORKER_QUEUE: '`{ "Fn::ImportValue" : "ScorekeepWorkerQueueUrl" }`'
    BUCKET_NAME: '`{ "Fn::ImportValue" : "ScorekeepRecordsBucketName" }`'
